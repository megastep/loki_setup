#
# Makefile for the setup plugins
# $Id: Makefile.in,v 1.1 2000-11-29 02:10:08 megastep Exp $
#

@SET_MAKE@
STATICS = cpio.c
PLUGINS = @PLUGINS@
CFLAGS  = -fPIC @CFLAGS@ -I..
CC		= @CC@
DYN_PLUGINS = @DYN_PLUGINS@

arch := @ARCH@
libc := @LIBC@

.SUFFIXES: .so .o .c

OBJS	= $(STATICS:.c=.o)

ifeq ($DYN_PLUGINS,true)

# Build all plugins as .so files
SOBJS = $(PLUGINS:.c=.so)

all: $(SOBJS) libplugins.a

install: all
	for a in $(SOBJS); do \
		cp -v $$a ../image/setup.data/bin/$(arch)/$(libc)/plugins; \
		strip ../image/setup.data/bin/$(arch)/$(libc)/plugins/$$a; \
	done

install.dbg: all
	for a in $(SOBJS); do \
		cp -v $$a ../image/setup.data/bin/$(arch)/$(libc)/plugins; \
	done

else

# Make a libplugin.a archive that will be linked with the main program
OBJS += $(PLUGINS:.c=.o)

all: libplugins.a

install:
	true

install.dbg:
	true

endif

libplugins.a: $(OBJS)
	ar rcs libplugins.a $(OBJS)

.c.so:
	$(CC) -shared -o $@ $*.c $(CFLAGS)
.c.o:
	$(CC) -o $@ -c $*.c $(CFLAGS)

clean:
	rm -f *.o *.so *.a *~

depend:
	$(CC) -MM $(CFLAGS) $(OBJS:.o=.c) > .depend

ifeq ($(wildcard .depend),.depend)
include .depend
endif
